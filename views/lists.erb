<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= items_remaining(list) %>/<%= total_items_count(list) %></p></li>
      </a>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Create New List</a>
<% end %>